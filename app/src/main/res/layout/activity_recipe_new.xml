<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/body_background"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/header_background"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/textView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingStart="10dp"
			android:paddingEnd="0dp"
			android:text="@string/recipe.new.header"
			android:textColor="@color/header_text"
			android:textSize="24sp" />

		<Space
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1" />

		<Button
			android:id="@+id/btn_confirm"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="0"
			android:drawableStart="@drawable/add_icon"
			android:drawablePadding="5dp"
			android:drawableTint="#000000"
			android:text="@string/confirm" />

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/label_recipeName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:labelFor="@id/field_recipeName"
			android:paddingStart="10dp"
			android:paddingEnd="0dp"
			android:text="@string/recipe.label.new.name"
			android:textColor="#A2A2A2"
			android:textSize="14sp" />

		<EditText
			android:id="@+id/field_recipeName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:autofillHints=""
			android:drawableEnd="@drawable/hazard_icon"
			android:drawableTint="#FFEB3B"
			android:ems="10"
			android:inputType="textPersonName"
			android:textColor="#E9E9E9"
			tools:text="Name" />
	</LinearLayout>

</LinearLayout>
